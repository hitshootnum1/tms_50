<%= @supervisor.name %>
<div class="container">
  <% if @courses.any? %>
    <% @courses.each do |course| %>
      <h3><%= course.name %></h3>
      <table border='1'>
        <tr>
          <th>User</th>
          <% course.course_subjects.each do |course_subject| %>
            <th><%= course_subject.subject.name %></th>
          <% end %>
          <th>Sumary</th>
        </tr>
        <tr>
          <% course.users.each do |user| %>
            <td><%= user.name %></td>
            <%= render "shared/mailer/last_day_month_table", user: user,
              course: course %>
            <td>
              <%= "#{user.user_tasks.count}/
                #{course.course_subject_tasks.count}" %>
            </td>
          <% end %>
        </tr>
      </table>
    <% end %>
  <% end %>
</div>
